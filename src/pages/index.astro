---
import MainLayout from "../layouts/MainLayout.astro";
import { Button } from "../components/ui/button";
---

<MainLayout title="10xCards - AI-Powered Flashcards Generator">
  <main class="container mx-auto px-4 py-8">
    <div class="flex flex-col items-center justify-center min-h-[60vh] text-center">
      <h1 class="text-4xl font-bold mb-4">Welcome to 10xCards</h1>
      <p class="text-xl text-gray-600 mb-8">
        Transform any text into high-quality flashcards using AI
      </p>
      <div class="space-x-4">
        <a href="/generate">
          <Button size="lg"> Start Creating Cards </Button>
        </a>
      </div>
    </div>
  </main>
</MainLayout>
